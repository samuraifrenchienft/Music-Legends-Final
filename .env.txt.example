# Environment Variables Template
# Copy this file to .env.txt and fill in your actual values

# Discord Bot Configuration (Required)
BOT_TOKEN=your_discord_bot_token_here
APPLICATION_ID=your_application_id_here
TEST_SERVER_ID=your_test_server_id_here

# Database Configuration (Required)
DATABASE_URL=postgres://username:password@localhost:5432/database_name

# Redis Configuration (Required for Queue System)
REDIS_URL=redis://localhost:6379/0

# Stripe Payments (Required for purchase system)
STRIPE_SECRET=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Backup Configuration (Required for restore drill)
BACKUP_PATH=/path/to/backups

# Admin Sales Channel (Optional - for sales logging)
SALES_CHANNEL_ID=your_sales_channel_id_here

# Spotify Integration (Optional - for enhanced features)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# YouTube Integration (Optional - for music videos)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Webhook Server Configuration (Optional)
WEBHOOK_PORT=5000

# Security Configuration
REQUIRE_WEBHOOK_SIGNATURE=true
